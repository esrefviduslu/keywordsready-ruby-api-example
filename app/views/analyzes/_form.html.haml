.container
  = image_tag 'logo_keywords_ready.png', class: 'center-block main-logo'
  .content
    .row
      .col-md-4
      .col-md-4
        = simple_form_for :analyzes, url: analyzes_path, method: :post do |f|
          = f.input :api_key, input_html: { class: 'form-control input-md', value: params[:analyzes].present? ? params[:analyzes][:api_key] : nil }
          = f.input :url, label: 'Picture URL', input_html: { class: 'form-control input-md', value: params[:analyzes].present? ? params[:analyzes][:url] : nil }
          %br= f.submit 'Analyze Picture', class: 'form-control'
          = link_to 'Clear form',  new_analyze_path if params[:analyzes].present?
          = recaptcha_tags
      .col-md-4